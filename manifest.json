
{
  "manifest_version": 3,
  "name": "Tone Changer",
  "version": "1.0.0",
  "description": "Change the tone of any website!",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>", "http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "happyHog.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}